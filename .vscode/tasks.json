{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build project",
            "command": "C:\\MinGW\\bin\\g++.EXE",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-g3",
                // A linha abaixo Ã© a mais importante.
                // Ela pega todos os arquivos .cpp na pasta do seu projeto.
                "Movies.cpp",
				"MovieDataBase.cpp",
				"main.cpp",
                "-o",
                // Isso vai salvar o .exe na sua pasta de output, como no seu comando.
                "${workspaceFolder}\\output\\main.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: C:\\MinGW\\bin\\g++.EXE"
        }
    ]
}